<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white"
        android:layout_marginTop="4dp"
        app:cardElevation="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imgHome"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/bg_menu_home"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/imgTransaction"
                app:layout_constraintHorizontal_weight="1"/>

            <ImageButton
                android:id="@+id/imgTransaction"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/bg_menu_transaction"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/imgHome"
                app:layout_constraintRight_toLeftOf="@+id/imgNotification"
                app:layout_constraintHorizontal_weight="1"/>

            <ImageButton
                android:id="@+id/imgNotification"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/bg_menu_notification"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/imgTransaction"
                app:layout_constraintRight_toLeftOf="@+id/imgOther"
                app:layout_constraintHorizontal_weight="1"/>

            <ImageButton
                android:id="@+id/imgOther"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/bg_menu_other"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/imgNotification"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_weight="1"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>